<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - V&A Pro Cleaning</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/V_A_PRO_CLEANING.styles.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet">

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #6d4a4b;">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand" href="/">
                    <img src="~/images/logo.jpg" 
                        alt="V&A Pro Cleaning Logo" 
                        style="height:50px; border-radius: 10px;">
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-fill">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="text-white py-4 mt-auto" style="background-color: #212529;">
        <div class="container text-center">
            <p class="mb-1">&copy; 2025 V&A Pro Cleaning - All Rights Reserved</p>
            <p class="mb-0">
                <a asp-page="/Privacy" class="text-white text-decoration-none">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
